  <%= form_with model: course do |form|  %>
  <div class="row">
  	<div class="col-lg-4">
  		<div class="form-group">
         <%= form.label :c_name, class: 'mb-2' %>
			<%= form.text_field  :c_name, class: 'form-control form-control-lg'%>
			  	<%  course.errors.full_messages_for(:c_name).each do |message| %>
			  	  <p class="text-danger"><%= message%></p>
                 <% end %>
  		</div>

  		<div class="form-group">
         <%= form.label :teacher_id, class: 'mb-2' %>
			<%#= form.text_field  :teacher_id, class: 'form-control form-control-lg'%>
			 <%= form.select :teacher_id, options_from_collection_for_select(Teacher.all, :id, :first_name), {}, class: 'form-control form-control-lg' %>

			  	<%  course.errors.full_messages_for(:teacher_id).each do |message| %>
			  

			  	  <p class="text-danger"><%= message%></p>
                 <% end %>
  		</div>

  		<div class="row">
		<div class="col-lg-12 mt-4">
		<%= form.submit class: 'btn btn-primary btn-lg' %>

        <%= link_to "Back to Course" , courses_path, class: "btn btn-outline-primary btn-lg " %>
		</div>
	</div>

  	</div>
  </div>
  <% end  %>