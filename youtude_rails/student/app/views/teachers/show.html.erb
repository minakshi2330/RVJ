<div class="col-lg-12">
	<div class="card rounded-0 mt-5 mb-5">
	<div class="card-body">
  <h1 class="text-center"> Teacher Details</h1>
  <div class="row"></div>
  <div class="col-lg-6">
  	<h3 class="text-center">Personal info</h3>
  	

<p class="lead"><strong>Name:</strong> <%= @teacher.first_name %></p>
  	<p class="lead"><strong>Title:</strong> <%= @teacher.last_name %></p>
   
 <p class="lead"><strong> Email:</strong> <%= @teacher.email %></p>
   <p class="lead"><strong>Subject:</strong> <%= @teacher.subject.sub_name %></p>

  </div>
  <div class="col-lg-6">
  	<h3 class="text-center">Address info</h3>
  	
 <p class="lead"><strong>Address:</strong> <%= @teacher.address %></p>

  </div>
  <%=  link_to 'Back to Teacher', teachers_path, class: 'btn btn-outline-primary btn-lg'   %>

   <%=  link_to 'Edit Teacher', edit_teacher_path(@teacher), class: 'btn btn-primary btn-lg'   %>
	</div>
</div>

</div>
