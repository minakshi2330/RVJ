<div class="col-lg-12">
 	<%= flash[:notice] %>
 <div class="card rounded-0 mt-5 mb-5">
	<div class="card-body">
  <h1 class="text-center">Listing Teachers</h1>
	</div>
	
 </div>

 <%= link_to "Create New Teacher",new_teacher_path ,class: "btn btn-primary btn-lg mb-4 rounded-0"  %>

  <table class="table table-bordered">
	<thead>
		<tr>
		<th>Name</th>
		<th>Title</th>
        <th>Email</th>
        <th>Subject</th>
         <th>Address</th>
         <th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @teachers.each do |teacher|   %>
		<tr>
			<td><%=  teacher.first_name %></td>
			<td><%= teacher.last_name %></td>
			<td><%= teacher.email %></td>
			<td><%= teacher.subject&.sub_name %></td>
			<td><%= teacher.address %></td>
			<td> <%= link_to "Edit" , edit_teacher_path(teacher), class: "btn btn-primary"   %></td>

			<td> <%= link_to "View" , teacher_path(teacher), class: "btn btn-info"   %></td>
             <td> <%= link_to "Delete" , teacher_path( teacher), class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure to delete this student'}   %></td>

		</tr>

		<% end %>

	</tbody>
</table>
</div>