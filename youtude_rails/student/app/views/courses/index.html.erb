 <div class="col-lg-12">
 	<%= flash[:notice] %>
  <div class="card rounded-0 mt-5 mb-5">
	<div class="card-body">
  <h1 class="text-center">Listing Teacher</h1>
	</div>
	
  </div>

  <%= link_to "Course name",new_course_path ,class: "btn btn-primary btn-lg mb-4 rounded-0"  %>

 <table class="table table-bordered">
	<thead>
		<tr>
		<th> Course Name</th>
		<th> Teacher</th>
		<th> Action</th>
		</tr>
	</thead>
	<tbody>
		<% @courses.each do |course|   %>
		<tr>
			<td><%= course.c_name %></td>
			<td><%= course.teacher.first_name %></td>
			<td> <%= link_to "Edit" , edit_course_path(course), class: "btn btn-primary"   %></td>

			<td> <%= link_to "View" , course_path(course), class: "btn btn-info"   %></td>

			<td> <%= link_to "Delete" , course_path(course), class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure to delete this student'}   %></td>
			<%# <td><%=student.full_address%>
		</tr>
		<% end %>

	</tbody>
 </table>
</div>