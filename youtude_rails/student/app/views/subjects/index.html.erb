 <div class="col-lg-12">
 	<%= flash[:notice] %>
  <div class="card rounded-0 mt-5 mb-5">
	<div class="card-body">
  <h1 class="text-center">Listing Subject</h1>
	</div>
	
  </div>

  <%= link_to "Create New subject",new_subject_path ,class: "btn btn-primary btn-lg mb-4 rounded-0"  %>

 <table class="table table-bordered">
	<thead>
		<tr>
		<th>Subject Name</th>
         <th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @subjects.each do |subject|   %>
		<tr>
			<td><%= subject.sub_name %></td>
			<td> <%= link_to "Edit" , edit_subject_path(subject), class: "btn btn-primary"   %></td>

			 <%#= link_to "View" , subject_path(subject), class: "btn btn-info"   %>

			<td> <%= link_to "Delete" , subject_path(subject), class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure to delete this subject'}   %></td>
			
		</tr>
		<% end %>

	</tbody>
 </table>
</div>